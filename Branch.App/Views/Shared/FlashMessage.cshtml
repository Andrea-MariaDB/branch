@model bool
@{
	var haveContainer = Model;
}

@if (haveContainer)
{
	<div class="container">
		<div id="flash-message-container" class="alert-container" style="margin: 0; padding: 0; display: none;">
			<div id="flash-message-box" class="alert alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong></strong>
				<span></span>
			</div>
		</div>
	</div>
}
else
{
	<div id="flash-message-container" class="alert-container" style="margin: 0; padding: 0; display: none;">
		<div id="flash-message-box" class="alert alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<strong></strong>
			<span></span>
		</div>
	</div>
}

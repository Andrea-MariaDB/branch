<% content_for :blog, true %>
<% content_for :title, 'Blog' %>	
<% content_for :has_footer, true %>
<% content_for :template, 'blog blog_home' %>
<% content_for :scripts do %>
<script>
</script>
<% end %>

<div class="bs-header" id="content">
	<div class="container">
		<h1>Blog</h1>
		<p>sysops, stats, new features. shit like that.</p>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="bs-branch-section blog">
				<div class="page-header">
					<h1>Blog</h1>
				</div>

				<% @blog_posts.each do |blog_post| %>
				<div class="row">
					<div class="col-md-12">
						<div class="bs-callout blog-entry">
							<h4><%= link_to(blog_post.name, blog_view_path(year: blog_post.created_at.year, month: blog_post.created_at.month, day: blog_post.created_at.day, slug: blog_post.slug)) %></h4>
							<p><%= blog_post.short_body %></p>

							<div class="details">
								<ul>
									<li>
										Author: <strong><%= link_to(blog_post.user.username, user_view_path(blog_post.user.username)) %></strong>
									</li>
									<li>
										Posted At: <strong><%= blog_post.created_at.strftime('%B %-d, %Y') %></strong>
									</li>
									<li>
										Category: <strong><%= link_to(blog_post.blog_category.name, '#') %></strong>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<% end %>

				<ul class="pager">
					<li class="previous <%= 'disabled' if !@has_less %>">
						<%= link_to(raw('&larr; Older'), blog_home_path(page: @previous_page)) %>
					</li>
					<li class="next <%= 'disabled' if !@has_more %>">
						<%= link_to(raw('Newer &rarr;'), blog_home_path(page: @next_page)) %>
					</li>
				</ul>
			</div>
		</div>

		<div class="col-md-3" data-spy="affix" data-offset-top="201">
			<%= render partial: 'blog/partials/category_sidebar' %>
		</div>
	</div>
</div>
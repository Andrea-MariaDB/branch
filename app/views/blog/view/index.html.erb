<% content_for :blog, true %>
<% content_for :title, 'Blog' %>	
<% content_for :has_footer, true %>
<% content_for :template, 'blog blog_view' %>
<% content_for :scripts do %>
<script>
</script>
<% end %>

<div class="bs-header" id="content">
	<div class="container">
		<h1><%= @blog_post.name %></h1>
		<p><%= @blog_post.short_body %></p>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="bs-branch-section blog-post">
				<div class="row">
					<div class="col-md-12 panel">
						<%= @markdown.render(@blog_post.full_body).html_safe() %>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-3">
			<%= render partial: 'blog/partials/category_sidebar' %>
		</div>
	</div>
</div>
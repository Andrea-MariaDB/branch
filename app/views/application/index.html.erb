              <% index += 1 %>
			        <%
		           if !playlist['IsCurrent'] || playlist['PopulationCount'] == 0
		             next
		           end
			        %>
              <li><a href="/halo4/playlists"><%= playlist['Name'] %>: <%= number_with_delimiter(playlist['PopulationCount'], :delimiter => ',') %> players</a></li>
            <% end %>
            <% if index == 0 %> <li><a href="/halo4/playlists">None</a></li> <% end %>
	        <% end %>
        </ul>
      </div>
    </div>

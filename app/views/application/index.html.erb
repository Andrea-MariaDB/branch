		        <% challenges = @friendly_challenge_data[category['Id']] %>
            <li class="nav-header"><%= category['Name'] %> Challenges;</li>
		        <% index = 0 %>
		        <% challenges.each do |challenge| %>
			        <% index += 1 %>
              <li><a href="/halo4/challenges"><%= challenge['Name'] %> - <%= challenge['XpReward'] %>xp</a></li>
		        <% end %>
		        <% if index == 0 %> <li><a href="/halo4/challenges">None</a></li> <% end %>
		      <% end %>
        </ul>
      </div>


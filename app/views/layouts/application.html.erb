<!DOCTYPE html>
<html>
	<head>
		<title>
			Branch <%= (" - " + yield(:title)) if content_for :title %> BY GABE_K
		</title>

		<!-- Stock third Party -->
		<%= stylesheet_link_tag    "bootstrap", :media => "all" %>

		<!-- App Style Sheets -->
		<%= stylesheet_link_tag    "branch-theme", :media => "all" %>
		<%= stylesheet_link_tag    "application", :media => "all" %>

		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		
		<%= csrf_meta_tags %>
	</head>
	<body class="<%= yield(:template) if content_for? :template %>">
		<a class="sr-only" href="#content">Skip navigation</a>
		<header class="navbar navbar-inverse navbar-fixed-top bs-branch-nav" role="banner">
			<div class="container">
				<div class="navbar-header">
					<button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to raw('Branch <sup>{εpsilon}</sup>'), root_url, { class: 'navbar-brand' } %>
				</div>
				<nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
					<ul class="nav navbar-nav">
						<li class="<%= 'active' if content_for? :home %>">
							<%= link_to 'Home', root_url %>
						</li>
						<li class="dropdown <%= 'active' if content_for? :halo4 %>">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#">Halo 4 <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li>
									<%= link_to 'Halo 4', :halo4_home %>
								</li>

								<li class="divider"></li>
								<li class="dropdown-header">Waypoint</li>
								<li>
									<%= link_to 'Playlists', '#' %>
								</li>
								<li>
									<%= link_to 'Challenges', '#' %>
								</li>

								<li class="divider"></li>
								<li class="dropdown-header">Leaf</li>
								<li>
									<a href="http://leafapp.co/h4/leaderboards">Leaderboards</a>
								</li>
							</ul>
						</li>
						<li class="<%= 'active' if content_for? :blog %>">
							<%= link_to 'Blog', '#' %>
						</li>
						<li class="<%= 'active' if content_for? :about %>">
							<%= link_to 'About', '#' %>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li>
							<form class="navbar-form">
								<div class="form-group">
									<input type="text" placeholder="Search Gamertag" class="form-control">
								</div>
							</form>
						</li>
						<li>
							<a href="#">Sign In</a>
						</li>
					</ul>
				</nav>
			</div>
		</header>

		<div class="container">
			<% [:info, :success, :danger].each do |level| %>
				<% unless flash[level].blank? %>
					<div class="alert alert-<%= level %>">
						<span><%= flash[level] %> </span>
						<a class="close" href="#">×</a>
					</div>
				<% end %>
			<% end %>
		</div>

		<%= yield %>

		<% if content_for? :has_footer %>
			<footer class="bs-footer" role="contentinfo">
				<div class="container">
					<div class="row">
						<div class="col-md-10">
							<p>Designed and developed by <a href="http://twitter.com/alexerax" target="_blank">@alexerax</a>.</p>
							<p>Code licensed under the <a href="http://www.dbad-license.org/" target="_blank">Don't Be A Dick</a> Public License.</p>
							<ul class="footer-links">
								<li><a href="http://xboxchaos.com/" target="_blank">Xbox Chaos</a></li>
								<li class="muted">·</li>
								<li><a href="http://halo.reddit.com/" target="_blank">Halo Reddit</a></li>
								<li class="muted">·</li>
								<li><a href="http://halowaypoint.com" target="_blank">Halo Waypoint</a></li>
								<li class="muted">·</li>
								<li><a href="/blog/" target="_blank">Blog</a></li>
								<li class="muted">·</li>
								<li><a href="https://github.com/Xerax/Branch" target="_blank">Github</a></li>
							</ul>
						</div>

						<div class="col-md-2 hidden-xs hidden-sm">
							<%= image_tag("uk-map.png", { width: '60', height: '77' }) %>
							<br>
							<!-- <span class="made-in">Made in the UK</span> -->
						</div>
					</div>
				</div>
			</footer>
		<% end %>

		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.map"></script>
		<%= javascript_include_tag "bootstrap" %>
		<%= javascript_include_tag "Chart" %>
		<%= javascript_include_tag "application" %>

		<!-- Social Media Button Scripts -->
		<div id="fb-root"></div>
		<script>
			(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;
				js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=189234734457151";
				fjs.parentNode.insertBefore(js, fjs);
				}(document, 'script', 'facebook-jssdk')
			);
		</script>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>

		<!-- Scripts -->
		<%= yield(:scripts) if content_for? :scripts %>
	</body>
</html>

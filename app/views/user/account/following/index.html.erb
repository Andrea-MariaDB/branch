<% content_for :user, true %>
<% content_for :title, "People #{@account.username} Follows" %>	
<% content_for :has_footer, true %>
<% content_for :account_active, 'following' %>
<% content_for :scripts do %>
<script>

</script>
<% end %>
<% content_for :template, 'account account_follow' %>

<%= render partial: 'user/account/partials/header' %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render partial: 'user/account/partials/sidebar' %>
		</div>

		<div class="col-md-9">
			<div class="bs-branch-section follow">
				<div class="page-header">
					<h1>People that <%= @account.username %> Follows</h1>
				</div>

				<% if (@following.length > 0) %>
					<% @following.each do |follow| %>
						<%= render partial: 'user/account/partials/display_user', locals: { follow: follow } %>
					<% end %>
				<% else %>
					<h4><%= @account.username %> doesn't follow anyone</h4>
				<% end %>
			</div>
		</div>
	</div>
</div>

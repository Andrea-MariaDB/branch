<% content_for :halo4, true %>
<% content_for :title, "Halo 4 - #{@service_record['Gamertag']}'s CSR" %>	
<% content_for :has_footer, true %>
<% content_for :halo4_active, 'csr' %>
<% content_for :scripts do %>
<script>
</script>
<% end %>
<% content_for :template, 'halo4 halo4_csr' %>

<%= render partial: 'halo4/partials/header' %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render partial: 'halo4/partials/sidebar' %>
		</div>

		<div class="col-md-9">
			<div class="bs-branch-section csr">
				<div class="page-header">
					<h1><%= @service_record['Gamertag'] %>'s CSR</h1>
				</div>

				<div class="row">
					<div class="col-md-12">
						<ul class="nav nav-tabs" style="margin-bottom: 15px;">
							<li class="active">
								<a href="#team" data-toggle="tab">Team</a>
							</li>
							<li class="">
								<a href="#individual" data-toggle="tab">Individual</a>
							</li>
						</ul>
						<div id="myTabContent" class="tab-content">
							<div class="tab-pane fade active in" id="team">
								<table class="table">
									<thead>
										<tr>
											<th>
												
											</th>
											<th>
												Name
											</th>
											<th>
												Description
											</th>
											<th>
												Ranking
											</th>
										</tr>
									</thead>
									<tbody>
										<% @team_playlists.each do |playlist| %>
											<% playlist_slug = playlist['PlaylistName'].to_slug() %>
											<tr>
												<td>
													<img src="<%= get_raw_asset_url(playlist['PlaylistImageUrl'], 'small') %>" />
												</td>
												<td>
													<%= link_to(playlist['PlaylistName'], halo4_csr_details_path(gamertag: @service_record['Gamertag'], id: playlist['PlaylistId'], slug: playlist_slug)) %>
												</td>
												<td>
													<%= playlist['PlaylistDescription'] %>
												</td>
												<td>
													<div class="csr-table-icon" style="background-image: url(<%= get_csr_level_url(playlist['CurrentSkillRank']) %>)"></div>
												</td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
							<div class="tab-pane fade" id="individual">
								<table class="table">
									<thead>
										<tr>
											<th>
												
											</th>
											<th>
												Name
											</th>
											<th>
												Description
											</th>
											<th>
												Ranking
											</th>
										</tr>
									</thead>
									<tbody>
										<% @individual_playlists.each do |playlist| %>
											<% playlist_slug = playlist['PlaylistName'].to_slug() %>
											<tr>
												<td>
													<img src="<%= get_raw_asset_url(playlist['PlaylistImageUrl'], 'small') %>" />
												</td>
												<td>
													<%= link_to(playlist['PlaylistName'], halo4_csr_details_path(gamertag: @service_record['Gamertag'], id: playlist['PlaylistId'], slug: playlist_slug)) %>
												</td>
												<td>
													<%= playlist['PlaylistDescription'] %>
												</td>
												<td>
													<div class="csr-table-icon" style="background-image: url(<%= get_csr_level_url(playlist['CurrentSkillRank']) %>)"></div>
												</td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

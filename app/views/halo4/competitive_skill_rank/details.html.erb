<% content_for :halo4, true %>
<% content_for :title, "Halo 4 - #{gamertag_validation(@service_record['Gamertag'])}'s CSR - #{@current_skill_rank['PlaylistName']}" %>	
<% content_for :has_footer, true %>
<% content_for :halo4_active, 'csr' %>
<% content_for :scripts do %>
<script>

</script>
<% end %>
<% content_for :template, 'halo4 halo4_csr' %>

<%= render partial: 'halo4/partials/header' %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render partial: 'halo4/partials/sidebar' %>
		</div>

		<div class="col-md-9">
			<div class="bs-branch-section csr-details">
				<%= render partial: 'partials/flash', locals: { flash: flash } %>
				<div class="page-header">
					<h1><%= gamertag_validation(@service_record['Gamertag']) %>'s <%= @current_skill_rank['PlaylistName'] %> CSR</h1>
				</div>

				<div class="row">
					<div class="col-md-12 playlist-image" style="background-image: url(<%= get_raw_asset_url(@current_skill_rank['PlaylistImageUrl'], 'large') %>)">
						<div class="csr" style="background-image: url(<%= get_csr_level_url(@current_skill_rank['CurrentSkillRank'], 'medium') %>)"></div>
					</div>

					<div class="col-md-12">
						<hr />
					</div>

					<div class="col-md-12 playlist-data">
						<span class="description"><%= @current_skill_rank['PlaylistDescription'] %></span>

						<div class="meta">
							<span class="party-size">
								Max Party Size:
								<strong><%= @playlist['MaxPartySize'] %></strong>
							</span>
							<br />
							<span class="local-party-size">
								Max Local Party Size:
								<strong><%= @playlist['MaxLocalPlayers'] %></strong>
							</span>
							<br />
							<span class="player-grouping">
								Player Grouping:
								<strong>
									<% if (@playlist['IsFreeForAll']) %>
										<%= "Free for All" %>
									<% else %>
										<%= "Team vs Team" %>
									<% end %>
								</strong>
							</span>
						</div>
					</div>

					<div class="col-md-12 hidden-xs">
						<hr />
					</div>
					<div class="col-md-12 hidden-xs playlist-advanced-data">
						<ul class="nav nav-tabs">
							<li class="active">
								<a href="#gvar" data-toggle="tab">Game Variants</a>
							</li>
							<li>
								<a href="#mvar" data-toggle="tab">Map Variants</a>
							</li>
						</ul>
						<div id="myTabContent" class="tab-content">
							<div class="tab-pane fade in active" id="gvar">
								<table class="table">
									<thead>
										<tr>
											<th>*</th>
											<th>Game Variant Name</th>
											<th>Game Variant Description</th>
											<th>Variant Based off of</th>
										</tr>
									</thead>
									<tbody>
										<% @playlist['RelatedGameVariants'].each do |game_variant| %>
											<tr class="entry">
												<td>
													<div class="icon-frame" style="background-image: url(<%= get_raw_asset_url(game_variant['GameBaseVariantImageUrl'], 'medium') %>);"></div>
												</td>
												<td><%= game_variant['Name'] %></td>
												<td><%= game_variant['Description'] %></td>
												<td><%= game_variant['GameBaseVariantName'] %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
							<div class="tab-pane fade in" id="mvar">
								<table class="table">
									<thead>
										<tr>
											<th>*</th>
											<th>Game Variant Name</th>
											<th>Game Variant Description</th>
										</tr>
									</thead>
									<tbody>
										<% @playlist['RelatedMapVariants'].each do |map_variant| %>
											<% map = get_map_from_base_id(map_variant['BaseMapId']) %>
											<tr class="entry">
												<td>
													<div class="preview-frame" style="background-image: url(<%= get_raw_asset_url(map['ImageUrl'], 'medium') %>);"></div>
												</td>
												<td class="name"><%= map['Name'] %></td>
												<td><%= map['Description'] %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

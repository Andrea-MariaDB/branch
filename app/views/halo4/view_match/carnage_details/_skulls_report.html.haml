.seperator{ :id => 'enemy-stats', :style => 'margin: 20px 0 20px 0;' }

- @sorted_players.each do |player|
  .skull_stats{ :id => "player_enemies_#{Digest::MD5.hexdigest(player['Gamertag'])}" }
    %h3
      Active Skulls

    %table.team-table.table.table-bordered.table-striped.table-hover
      %thead
        %tr
          %td
            Skull
          %td
            Name
          %td
            Description

      %tbody
        - @match['SkullIds'].each do |skull_id|
          %tr
            - skull_data = skull_meta_from_id(skull_id)
            %td
              %img{ :src => X343ApiController.asset_url_generator_basic(skull_data['ImageUrl']['BaseUrl'], skull_data['ImageUrl']['AssetUrl'], 'medium') }
            %td
              #{skull_data['Name']}
            %td
              #{skull_data['Description']}
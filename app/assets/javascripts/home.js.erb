$(jQuery).ready(function () {
	// Home Page slideshow
	const interval = 8000; // 10 seconds
	const element = $('.header');
	let imageIndex = 1;
	const images = [
		'<%= asset_path "home/halo-5.jpg" %>',
		'<%= asset_path "home/destiny.jpg" %>',
		'<%= asset_path "home/halo-4.jpg" %>',
		'<%= asset_path "home/halo-reach.jpg" %>',
		'<%= asset_path "home/halo-3.jpg" %>',
		'<%= asset_path "home/halo-3-odst.jpg" %>',
	];

	// Cache images
	images.forEach(function (img) {
		new Image().src = img;
	});

	// Slide through images in background
	setInterval(function () {
		if (imageIndex >= images.length) imageIndex = 0;
		const image = images[imageIndex];
		element.css("background-image", "url("+image+")");
		imageIndex++;
	}, interval);

	// Typed placeholder thang
	$(document).ready(function () {
		$('#gamertag-search').typed({
			strings: [
				'Major Nelson',
				'xyoatcakes',
				'Bravo',
				'P3',
				'iBot',
				'Program (rip)',
			],
			attr: 'placeholder',
			typeSpeed: 30,
			loop: true,
			startDelay: 0,
			backDelay: 1200,
		});
	});
});

{
  "extends": [],
  "defaultSeverity": "warning",
  "rules": {
    "curly": [true, "as-needed"],
    "ordered-imports": [false, { "import-sources-order": "lowercase-last", "named-imports-order": "lowercase-last" }],
    "jsx-boolean-value": "never"
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
